<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Header -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KinderNeutron"
        android:fontFamily="serif"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/imagekn_round"
        android:drawablePadding="8dp"
        android:paddingTop="4dp" />

    <!-- First WebView -->

    <!-- Second WebView -->


    <!-- Status messages occupying the bottom half -->

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_above="@id/statusContainer"
        android:layout_below="@id/headerTextView"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="205dp" />

    <WebView
        android:id="@+id/webView2"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_above="@id/statusContainer"
        android:layout_below="@id/headerTextView"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="1dp" />

    <LinearLayout
        android:id="@+id/statusContainer"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="98dp"
        android:background="@color/red"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="24dp">

        <!-- Left half: Person status -->

        <!-- Right half: Light status -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="106dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/personStatusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingBottom="6dp"
                android:text="Person Status"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/personTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingBottom="6dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Add an icon -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="109dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/lightStatusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingBottom="6dp"
                android:text="Light Status"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lightTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingBottom="6dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Add an icon -->
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/NextButton"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="668dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="serif"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
